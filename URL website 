<body>

<div class="box">
  <h2>ðŸ“· Photo to URL</h2>

  <input type="file" id="photo" accept="image/*">
  <button onclick="uploadPhoto()">Upload & Get URL</button>

  <div class="url-box" id="result">
    <p id="urlText"></p>
    <button onclick="copyURL()">Copy URL</button>
  </div>
</div>

<script>
  // ðŸ”¥ Firebase Config (à¤¯à¤¹à¤¾à¤ à¤…à¤ªà¤¨à¤¾ config à¤¡à¤¾à¤²à¥‹)
  const firebaseConfig = {
    apiKey: "YOUR_API_KEY",
    authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
    projectId: "YOUR_PROJECT_ID",
    storageBucket: "YOUR_PROJECT_ID.appspot.com",
    messagingSenderId: "XXXXXXX",
    appId: "XXXXXXX"
  };

  firebase.initializeApp(firebaseConfig);
  const storage = firebase.storage();

  function uploadPhoto() {
    const file = document.getElementById("photo").files[0];
    if (!file) {
      alert("Please select a photo");
      return;
    }

    const fileName = Date.now() + "_" + file.name;
    const storageRef = storage.ref("photos/" + fileName);

    storageRef.put(file).then(() => {
      storageRef.getDownloadURL().then((url) => {
        document.getElementById("urlText").innerText = url;
        document.getElementById("result").style.display = "block";
      });
    }).catch(err => {
      alert("Upload failed");
      console.error(err);
    });
  }

  function copyURL() {
    const text = document.getElementById("urlText").innerText;
    navigator.clipboard.writeText(text);
    alert("URL Copied!");
  }
</script>

</body>
